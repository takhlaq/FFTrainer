<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFTrainer"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="FFTrainer.LoadOption"
        mc:Ignorable="d"
        Title="Load Options" Height="168.02" Width="305.228" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="0,0,2,-2">
        <ListBox BorderThickness="1" FontSize="24" Margin="14,17,13,22">
            <ListBoxItem x:Name="All" MouseDoubleClick="ListBoxItem_MouseDoubleClick" Content="{DynamicResource LoadAll}" Uid="1" KeyDown="All_KeyDown"/>
            <ListBoxItem x:Name="App" MouseDoubleClick="ListBoxItem_MouseDoubleClick_1" Content="{DynamicResource LoadApp}"  BorderThickness="0" Uid="2" KeyDown="App_KeyDown"/>
            <ListBoxItem x:Name="Xuip" MouseDoubleClick="ListBoxItem_MouseDoubleClick_2" Content="{DynamicResource LoadXuip}" BorderThickness="0" Uid="3" KeyDown="Xuip_KeyDown"/>
        </ListBox>

    </Grid>
</Window>
